<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialogFragment" parent="Theme.AppCompat.Light.Dialog">

        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowSoftInputMode">adjustPan</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="BaseDialogFragmentBottomAnimation" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/enter_bottom_anim</item>

        <item name="android:windowExitAnimation">@anim/exit_bottom_anim</item>

    </style>

</resources>
